{
    "name": "My first extention",
    "description": "Shows a menu item",
    "version": "0.1",
    "permissions": ["contextMenus", "activeTab"],
    "background.service_worker": {
        "scripts":  ["background.js"]
    },
    "content_scripts": [
     {
         "matches": ["*://www.google.com/*"],
         "js":["index.js"]
     }
    ],

    "manifest_version": 3

}